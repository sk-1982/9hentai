{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "lib",
    "declaration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "lib": [
      "es2019"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [ "node" ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}